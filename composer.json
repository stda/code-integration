{
    "require": {
        "php": "^7.2",
        "phpunit/phpunit": "^7.5",
        "squizlabs/php_codesniffer": "^3.4",
        "slevomat/coding-standard": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "Stda\\CodeIntegration\\": "src/",
            "Stda\\CodeIntegration\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "tests": [
            "@phpcs",
            "@unit"
        ],
        "phpcs": "vendor/bin/phpcs --colors src tests",
        "unit": "vendor/bin/phpunit"
    }
}
